/**
 * Computes the sum of three bits.
 */

CHIP FullAdder {
    IN a, b, c;  // 1-bit inputs
    OUT sum,     // Right bit of a + b + c
        carry;   // Left bit of a + b + c

    PARTS:
    // Put you code here:
    Xor(a=a,b=b,out=out1);
    Xor(a=out1,b=c,out=sum);

    And(a=a,b=b,out=ab);
    And(a=b,b=c,out=bc);
    And(a=a,b=c,out=ac);
    Or(a=ab,b=bc,out=out2);
    Or(a=out2,b=ac,out=carry);
}